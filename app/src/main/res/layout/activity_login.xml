<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/egco"
        android:id="@+id/circleView"
        />
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:background="@drawable/mybutton"
        android:id="@+id/textview1"
        android:layout_below="@+id/circleView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/background_material_light"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/usernameInput"
        android:background="@drawable/myedit"
        android:layout_below="@+id/textview1"
        android:layout_alignStart="@+id/textview1"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:background="@drawable/mybutton"
        android:id="@+id/textView2"
        android:textColor="@color/background_material_light"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/usernameInput"
        android:layout_alignStart="@+id/usernameInput"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordInput"
        android:background="@drawable/myedit"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/button"
        android:background="@drawable/myclick"
        android:textColor="@color/background_material_light"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/passwordInput"
        android:layout_alignStart="@+id/passwordInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button2"
        android:background="@drawable/myclick"
        android:textColor="@color/background_material_light"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:background="@drawable/myclick"
        android:textColor="@color/background_material_light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>
